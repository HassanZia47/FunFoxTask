@model IEnumerable<FunFoxTask.Models.CourseVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Description")
            </th>
            <th>
                @Html.DisplayName("Levels")
            </th>
            <th>
                @Html.DisplayName("Timings")
            </th>
            <th>
                @Html.DisplayName("Max Strengh")
            </th>
            <th>
                @Html.DisplayName("Current Strengh")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Levels)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Timings)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxStrengh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentStrengh)
                </td>
                <td>
                    @{
                        if (item.EnrollFlag)
                        {
                            <a asp-action="Enroll" asp-route-id="@item.Id">Enroll</a>
                        }
                        else
                        {
                            @item.TextToShow
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>